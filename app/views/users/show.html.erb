<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.readings.any? %>
      <h3>Readings (<%= @user.readings.count %>)</h3>
      <ol class="readings">
        <%= render @readings %>
      </ol>
      <%= will_paginate @readings %>
    <% end %>
  </div>
</div>
